{% extends 'defTemplate.html.twig' %}

{% block body %}
	<div class="container">
	
		<div class="mx-auto mt-2 border border-blue p-3" style="width: 400px; background: rgba(255,255,255,0.5);">
			<h3 class="text-center">Connexion</h3>
			<form method="POST" action="index.php?page=connexion" class="p-4">

				<!-- Email input -->
				<div class="form-outline mb-4">
					<input type="text" id="pseudo" name="pseudo" class="form-control"
					{{error != "" ? "value=" ~ post.pseudo : ""}}
					required/>
					<label class="form-label" for="pseudo">Votre Pseudo</label>
				</div>

				<!-- Password input -->
				<div class="form-outline mb-4">
					<input type="password" id="mdp" name="mdp" class="form-control" required/>
					<label class="form-label" for="mdp" required>Mot de passe</label>
				</div>
				<!-- Submit button -->
				<button type="Submit" name="action" value="connexion" class="btn btn-primary btn-block mb-4">Connexion</button>
				{{error != "" ? "<p style=\"color:red;\">Vos informations de connexion sont incorrectes<p>" : ""}}
				<!-- Register buttons -->
				<div class="text-center">
					<p>Pas inscrit ?
						<a href="index.php?page=register">Cr√©er un Compte</a>
					</p>
				</div>
			</form>
		</div>
	{% endblock %}
