{% extends 'defTemplate.html.twig' %}
{% block body %}

	<div class="row mx-auto" style="width: 90%;">
		{% for produit in shop|sort((b,a)=> a.quantity <=> b.quantity) %}
			<div class="card mx-auto my-2 p-2 text-center" style="width: 18rem; background-image: url(Contenu/images/fond_etoile.jpg);background-size: cover; ">
				<div class="card-body">
					<h5 class="card-title">{{ produit.name }}</h5>
					<a href="index.php?page=produit&product_id={{produit.id}}">
						<img src="Contenu/productimages/{{ produit.image }}" class="card-img-top" alt="{{ produit.name }}">
					</a>
					{% if produit.quantity == 0 %}
						<p class="card-text text-danger">/!\ Rupture de stock /!\</p>
					{% endif %}
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}