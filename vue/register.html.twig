{% extends 'defTemplate.html.twig' %}

{% block body %}

<section class="h-100 h-custom gradient-custom-2">
<form   action="index.php?page=connexion" method="POST"
        oninput='mdp2.setCustomValidity(mdp2.value != mdp.value ? "Passwords do not match." : "")'
>
<div class="container py-5 h-100 background:">
<div class="row d-flex justify-content-center align-items-center">
<div class="col-12 ">
<div class="card card-registration card-registration-2"
        style="border-radius: 15px; background: rgba(255,255,255,0.4);">
    <div class="card-body p-0">
        <div class="row g-0">
        <div class="col-lg-6">
            <div class="p-5">
                <h3 class="fw-normal mb-5" style="color: #4835d4;">Infomation Générales</h3>
                <div class="row">
                    <div class="col-md-6 mb-4 pb-2">

                        <div class="form-outline">
                            <input type="text" id="prenom" name="prenom" class="form-control form-control-lg"
                                {{error != "" ? "value=" ~ post.prenom : ""}}
                                required/>
                            <label class="form-label" for="prenom">Prénom</label>
                        </div>

                    </div>
                    <div class="col-md-6 mb-4 pb-2">

                        <div class="form-outline">
                            <input type="text" id="nom" name="nom" class="form-control form-control-lg"
                            {{error != "" ? "value=" ~ post.nom : ""}}
                            required/>
                            <label class="form-label" for="nom">Nom</label>
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4 pb-2">

                        <div class="form-outline form-white">
                            <input type="password" id="mdp" name="mdp" class="form-control form-control-lg" required/>
                            <label class="form-label" for="mdp">Mot de passe</label>
                        </div>

                    </div>
                    <div class="col-md-6 mb-4 pb-2">

                        <div class="form-outline form-white">
                            <input type="password" id="mdp2" name="mdp2" class="form-control form-control-lg" required/>
                            <label class="form-label" for="mdp2">Confirmer Mot de passe</label>
                        </div>

                    </div>
                </div>

                <div class="mb-4">
                    <div class="form-outline form-white">
                        <input type="email" id="mail" name="mail" class="form-control form-control-lg"
                        {{error != "" ? "value=" ~ post.mail : ""}}
                        required/>
                        <label class="form-label" for="mail">Votre Email</label>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-4 pb-2">
                        <div class="form-outline form-white">
                            <input type="number" id="numero_tel" name="numero_tel" class="form-control form-control-lg"
                            {{error != "" ? "value=" ~ post.numero_tel : ""}}
                            required/>
                            <label class="form-label" for="numero_tel">Numéro de Téléphone</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4 pb-2">
                        <div class="form-outline form-white">
                            <input type="text" id="pseudo" name="pseudo" class="form-control form-control-lg"
                            {{error != "" ? "value=" ~ post.pseudo : ""}}
                            required/>
                            <label class="form-label" for="pseudo">
                                {{error == "Pseudo" ? "<p style=\"color:red;\">Pseudo déjà pris<p>" : "Votre Pseudo"}}
                            </label>
                        </div>
                    </div>
                </div>
                <button type="Submit" name="action" value="register" class="btn btn-dark btn-lg" data-mdb-ripple-color="dark">S'inscrire</button>
		        <a href="index.php?page=connexion" class="btn btn-outline-dark btn-lg" data-mdb-ripple-color="dark">Retour à la Connexion</a>
            </div>
        </div>
        {% include 'adressePseudoForm.html.twig' %}
    </div>
</div>
</div>
</div>
</div>
</div>
</form>
	</section>
{% endblock %}
